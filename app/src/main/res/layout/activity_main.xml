<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aad.streamplayer.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listView"
        android:layout_above="@+id/player"/>

    <RelativeLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/songName"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duree"
            android:layout_alignBaseline="@+id/progressBarre"
            android:layout_alignBottom="@+id/progressBarre"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bpTime"
            android:max="1"
            android:progress="0"
            android:minHeight="10dp"
            android:layout_below="@+id/progressBarre"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0:00"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarre"
            android:layout_below="@+id/songName"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/center"
            android:background="@android:color/transparent"
            android:layout_below="@+id/bpTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play"
            android:background="@android:color/transparent"
            android:onClick="playPauseButton"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:id="@+id/b_pp"
            android:layout_below="@+id/bpTime"
            android:layout_toEndOf="@+id/center"
            android:layout_marginTop="7dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_stop"
            android:id="@+id/b_stop"
            android:onClick="stopButton"
            android:layout_alignTop="@+id/b_pp"
            android:layout_toStartOf="@+id/center" />

        <ImageButton
            android:onClick="clickNext"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_next"
            android:id="@+id/b_next"
            android:layout_marginLeft="16dp"
            android:layout_alignTop="@+id/b_pp"
            android:layout_toEndOf="@+id/b_pp" />

        <ImageButton
            android:onClick="clickPrevious"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_previous"
            android:id="@+id/b_previous"
            android:layout_alignTop="@+id/b_stop"
            android:layout_toStartOf="@+id/b_stop"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>
</RelativeLayout>
